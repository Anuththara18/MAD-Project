<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#0A0A3C"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/roomImage"
        android:layout_width="154dp"
        android:layout_height="119dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:paddingBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/room1a" />

    <TextView
        android:id="@+id/roomName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:text="@string/room_1_name"
        android:textColor="@color/gradient1"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/roomImage"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ratings"
        android:layout_width="104dp"
        android:layout_height="19dp"
        android:layout_marginTop="33dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.637"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/star_ratings_1" />

    <TextView
        android:id="@+id/roomPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:text="@string/room_1_price"
        android:textColor="@color/gradient1"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/roomImage"
        app:layout_constraintTop_toBottomOf="@+id/roomName" />

    <Button
        android:id="@+id/bookNowBtn"
        android:layout_width="92dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/rounded_buttons"
        android:text="@string/book_now_btn"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/detailsBtn"
        app:layout_constraintTop_toBottomOf="@+id/roomName" />

    <Button
        android:id="@+id/detailsBtn"
        android:layout_width="81dp"
        android:layout_height="27dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_buttons"
        android:text="@string/details_btn"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/roomImage"
        app:layout_constraintTop_toBottomOf="@+id/roomPrice" />


</androidx.constraintlayout.widget.ConstraintLayout>