<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservationsHomeActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="29dp"
        android:fontFamily="cursive"
        android:text="@string/welcome"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="155dp"
        android:layout_height="93dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="382dp"
        android:background="@color/reservation_button"
        android:drawableTop="@drawable/icon_profile_large"
        android:drawablePadding="5dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/profile_btn"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button9" />

    <Button
        android:id="@+id/button7"
        android:layout_width="155dp"
        android:layout_height="93dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="382dp"
        android:background="@color/reservation_button"
        android:drawableTop="@drawable/icon_bookings_large"
        android:drawablePadding="5dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/bookings_btn"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

    <Button
        android:id="@+id/button8"
        android:layout_width="155dp"
        android:layout_height="93dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="35dp"
        android:background="@color/reservation_button"
        android:drawableTop="@drawable/icon_home_large"
        android:drawablePadding="5dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/rooms_btn"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        app:layout_constraintEnd_toStartOf="@+id/button9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button9"
        android:layout_width="155dp"
        android:layout_height="93dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="35dp"
        android:background="@color/reservation_button"
        android:drawableTop="@drawable/icon_hotel_large"
        android:drawablePadding="5dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/book_now_btn"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>