<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A3C"
    tools:context=".ReservationsHomeActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/waves"
        android:alpha="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.506" />

    <Button
        android:id="@+id/rooms"
        android:layout_width="277dp"
        android:layout_height="115dp"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/reservations_home_btns"
        android:drawableTop="@drawable/icon_home_large"
        android:drawablePadding="5dp"
        android:fontFamily="@font/aclonica"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="@string/rooms_btn"
        android:textAlignment="center"
        android:textColor="@color/cardview_dark_background"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/booknow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/booknow"
        android:layout_width="277dp"
        android:layout_height="115dp"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/reservations_home_btns"
        android:drawableTop="@drawable/icon_hotel_large"
        android:drawablePadding="5dp"
        android:fontFamily="@font/aclonica"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="@string/book_now_btn"
        android:textColor="@color/cardview_dark_background"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bookings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bookings"
        android:layout_width="277dp"
        android:layout_height="115dp"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/reservations_home_btns"
        android:drawableTop="@drawable/icon_bookings_large"
        android:drawablePadding="5dp"
        android:fontFamily="@font/aclonica"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="@string/my_bookings"
        android:textColor="@color/cardview_dark_background"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/profile"
        android:layout_width="277dp"
        android:layout_height="115dp"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/reservations_home_btns"
        android:drawableTop="@drawable/icon_profile_large"
        android:drawablePadding="5dp"
        android:fontFamily="@font/aclonica"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="@string/profile_btn"
        android:textColor="@color/cardview_dark_background"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
